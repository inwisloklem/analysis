.form
  padding-top: 40px
  padding-bottom: 20px

  background-color: $java
  background-image: linear-gradient(to bottom, $magic-mint, $java)

  @media $tablet-desktop
    background-image: url("../img/background-form.jpg")
    background-position: top center
    background-size: cover
    background-repeat: no-repeat

  @media $desktop
    box-shadow: inset 0 0 25px 5px rgba($mine-shaft, 0.25)

  &__title
    margin-bottom: 20px
    color: $white
    text-align: center
    font(1.75em, 1.2, 200, uppercase)

  &__mark
    font-weight: 500

  &__name
  &__tel
    padding: 10px 25px
    padding-top: 13px
    margin-bottom: 20px
    box-sizing: border-box
    width: 100%
    height: 40px
    border: none
    border-radius: 20px
    outline: none
    color: $red-ribbon
    font(0.875em, 1, 700)
    transition: background-color 0.4s ease-in-out

    &::-webkit-input-placeholder
      color: lighten($mine-shaft, 70%)
      
    &:focus
      background-color: $humming-bird
      transition: background-color 0.4s ease-in-out
      
      &::-webkit-input-placeholder
        color: lighten($mine-shaft, 50%)

  &__label
    display: block
    margin-bottom: 2px
    padding-left: 25px
    color: $white
    font(1em, normal, 200)

  &__wrapper
    padding: 20px
    margin: auto
    max-width: 400px

  &__note
    color: $white
    text-align: center
    font(1em, 1.2, 200)
    
  &__btn
    margin-top: 20px
    margin-bottom: 40px